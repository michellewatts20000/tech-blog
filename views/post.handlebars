<div class=" container text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>




  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <form class="form-signin signup-form">
        <h5 class="mb-3 font-weight-normal">Make a Comment</h5>
        <input type="text" id="comment" name="comment-body" class="form-control form-input mb-3"
          placeholder="write your comment here" required>


        <button class="btn btn-md btn-danger comment-form btn-block" type="submit">Submit</button>
      </form>
    </div>
  </div>


  <div class="comments">
    {{#each comments as |comment| }}
    <div class="card">
      <h3 class="card-header"></h3>
      <section class="comment card-body">
        <div class="text">
          {{comment}}
        </div>
        <div class="meta">
          {{user.name}}
        </div>
      </section>
    </div>
    {{/each}}
  </div>




  <script src="/js/comment.js"></script>