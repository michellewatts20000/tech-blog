<div class="container">
  <h2 class="text-center">{{name}}</h2>
    <p class="text-center mb-5">Created by {{user.name}} on {{format_date date_created}}</p>
  <p class="mb-5">{{description}}</p>

  <div class="row justify-content-md-center">
    <div class="col-md-12">
       {{#if logged_in}}
      <form class="form-signin signup-form">
        <h5 class="mb-3 font-weight-normal">Comment on: '{{name}}'</h5>
        <textarea id="comment" name="comment-body" class="form-control form-input mb-3"
          placeholder="I really liked what you said about ..." required></textarea>
        <button class="btn btn-lg btn-danger comment-form" type="submit">Submit</button>
      </form>
        {{else}}
        <h4>Login to comment</h4>
         {{/if}}
    </div>
  </div>

<div class="row justify-content-md-center mt-5">
  <div class="col-md-12">
 <h3>Comments:</h3>
  {{#if comments.length}}
    {{#each comments as |comment|}}
<div class="card mb-3">
  
  <div class="card-body">
    
    <h5 class="card-text">{{this.comment}}</h5>
    <p class="card-title">Created by: {{this.user.name}} on {{format_date this.createdAt}}</p>
  
  </div>
</div>
{{/each}}
    {{else}}

    <p>Be the first person to comment</p>

    {{/if}}
  </div>
</div>



   




  <script src="/js/comment.js"></script>