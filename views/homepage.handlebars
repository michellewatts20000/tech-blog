
{{#each posts as |post| }}
<div class="card mb-3">
  <div class="card-header">
   <h3> <a href="/post/{{post.id}}">{{post.name}}</a></h3>
  </div>
  <div class="card-body">
    
    <h5 class="card-text">{{post.description}}</h5>
    <p class="card-title">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
    <a href="/post/{{post.id}}" class="btn btn-lg btn-warning">Read</a>
  </div>
</div>
{{/each}}
