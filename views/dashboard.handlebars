<div class="row justify-content-around">
 
  <div class="col-md-5 mb-5">
    <form class="form new-post-form">
      <h1 class="h3 mb-3 font-weight-normal">Create a post</h1>
      <label for="post-name" class="sr-only">Post title</label>
      <input type="text" id="post-name" class="form-control mb-3" placeholder="What even is JavaScript?" required autofocus>

      <label for="post-desc" class="sr-only">Content</label>
      <textarea type="textarea" id="post-desc" class="form-control mb-3" placeholder="Write your blog here" required></textarea>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
    </form>
  </div>


  {{#if posts.length}}
  <div class="col-md-5">
    <h3>All your posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger delete-post-btn" data-id="{{post.id}}">DELETE</button>
        <a class="btn btn-sm btn-warning" href="/edit/{{post.id}}">EDIT</a>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>
